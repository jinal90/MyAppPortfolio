<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="1dp"
    tools:ignore="UnusedAttribute">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivPlayTrailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/play_trailer"
            android:onClick="onClick"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_play" />

        <TextView
            android:id="@+id/tvTrailerTitle"
            style="@style/MyTextValueStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivPlayTrailer"
            android:text="@string/trailer_item" />

    </RelativeLayout>
</android.support.v7.widget.CardView>